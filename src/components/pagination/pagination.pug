mixin pagination()
  .pagination
    a(href="#").pagination__prev-btn
      svg
        use(xlink:href="img/sprite.svg#arrow-left")
    ul.pagination__list
      li.pagination__item.is-active
        a(href="#") 1
      li.pagination__item
        a(href="#") 2
      li.pagination__item
        a(href="#") 3
      li.pagination__item.pagination__item--hidden
        a(href="#") 4
      li.pagination__item.pagination__item--hidden
        a(href="#") 5
      li.pagination__item.pagination__item--dots ...
      li.pagination__item.pagination__item--last 
        a(href="#") 39
    a(href="#").pagination__next-btn
      svg
        use(xlink:href="img/sprite.svg#arrow-left")
    