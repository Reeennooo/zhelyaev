mixin product-card(data, images)
  .product-card(data-id='tumba-112' data-img='https://cdn.kanobu.ru/articles/pics/7b22cfa6-9aff-4dd1-9790-9680f01fc0e7.webp' data-product=data)
    .product-card__wrapper
      a(href="product.html").product-card__main-info
        .product-card__gallery
          .product-card__img
            img(src=images[0], loading="lazy")
        .product-card__name=data.name
        .product-card__cost
          span=data.price
          | &nbsp;₽
          button.add-to-basket.add-to-basket--mobile
            img(src='./img/icons/basket.svg', alt="Добавить в корзину")
      .product-card__hide
        +btn('Добавить в корзину', '', 'small, transparent').product-card__btn.add-to-basket
