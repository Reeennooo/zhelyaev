mixin product-gallery()
  .product-gallery
    .product-gallery__desktop
      .product-gallery__large
        img(src="./img/clothes/nike-1.png", alt="").product-gallery__photo
        img(src="./img/clothes/nike-2.png", alt="").product-gallery__photo
      .product-gallery__small
        img(src="./img/clothes/nike-3.png", alt="").product-gallery__photo
        img(src="./img/clothes/nike-2.png", alt="").product-gallery__photo
        img(src="./img/clothes/nike-2.png", alt="").product-gallery__photo.product-gallery__photo--hidden
        img(src="./img/clothes/nike-1.png", alt="").product-gallery__photo.product-gallery__photo--hidden
        img(src="./img/clothes/nike-1.png", alt="").product-gallery__photo.product-gallery__photo--hidden
      .product-gallery__for-button
        +btn('Все фото', '', 'small, transparent').product-gallery__button.is-active